{
  "name": "@florianamette/next-md-blog",
  "version": "1.0.0",
  "description": "A React library for parsing and displaying markdown blog posts in Next.js",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "react",
    "nextjs",
    "markdown",
    "blog",
    "mdx",
    "content"
  ],
  "author": "florianamette",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/florianamette/next-mdx-blog.git"
  },
  "homepage": "https://github.com/florianamette/next-mdx-blog#readme",
  "bugs": {
    "url": "https://github.com/florianamette/next-mdx-blog/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "c12": "^2.0.4",
    "gray-matter": "^4.0.3",
    "react-markdown": "^10.1.0",
    "rehype-react": "^7.0.0",
    "remark": "^15.0.1",
    "remark-emoji": "^5.0.2",
    "remark-gfm": "^4.0.0",
    "remark-rehype": "^11.1.1",
    "tailwindcss": "^4.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitest/coverage-v8": "^4.0.8",
    "semantic-release": "^23.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.8"
  },
  "peerDependencies": {
    "next": "^16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}