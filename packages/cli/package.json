{
  "name": "@next-md-blog/cli",
  "version": "1.0.0",
  "description": "CLI tool for initializing next-md-blog in your Next.js project",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "next-md-blog-init": "./dist/cli.js",
    "@next-md-blog/cli-init": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && cp -r src/templates dist/templates",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "nextjs",
    "mdx",
    "blog",
    "cli",
    "init"
  ],
  "author": "florianamette",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/florianamette/next-mdx-blog.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@next-md-blog/core": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.8",
    "typescript": "^5.7.0",
    "vitest": "^4.0.8"
  }
}
